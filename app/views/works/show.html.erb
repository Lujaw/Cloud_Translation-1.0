  <b>Translated text:</b>
  <%= @work.translated_text %>
</p>

<table id="translation_client_view">
  <tr>
    <th width= 350px>Original</th>
    <th width= 350px>Translation</th>
    <th width= 350px>Action</th>
  </tr>

  <% @work.tasks.each do |task| %>
  <!-- <%# if (task.Approved != true && !task.translated_text.nil?)%>    -->
  <tr>
    <td><%= task.content %></td>
    <td><%= task.translated_text %></td>
    <% if task.translated_text != nil %>
     <% if task.status == "Translated" &&  %>
        <td>Approved</td>
     <% else %>
        <td><%= link_to 'Approve',   task_status_path(task,"Approved") %>  ||
        <%= link_to 'Reject',   task_status_path(task,"Rejected") %></td>
     <% end%>
      <% else %>
      <td>Not Translated</td>
  <% end%>
  </tr>
  <% #end %>
  <% end %>

</table>

<%= link_to 'Back', works_path %>
